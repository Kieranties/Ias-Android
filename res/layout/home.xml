<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageBanner"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
        android:src="@drawable/iasbanner"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/app_title" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:width="252dp"
		android:height="150dp"
        android:text="@string/add_sighting"
        android:background="@color/ias_main"
        android:textColor="@color/white"
        android:onClick="onAddPhotoClick" 
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    
    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="15dp"
		android:width="252dp"
		android:height="150dp"
        android:text="@string/view_gallery"
        android:background="@color/ias_main"
        android:textColor="@color/white"
        android:onClick="onViewGalleryClick"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/layoutButtonWrap"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:width="120dp"
            android:layout_marginRight="6dp"
            android:onClick="onAboutClick"/>

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:width="120dp"
            android:layout_marginLeft="6dp"
            android:onClick="onSettingsClick"/>

    </LinearLayout>

</LinearLayout>